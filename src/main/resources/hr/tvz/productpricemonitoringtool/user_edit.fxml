<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.shape.Circle?>
<GridPane maxHeight="-Infinity"
          maxWidth="-Infinity"
          minHeight="-Infinity"
          minWidth="-Infinity"
          prefHeight="400.0"
          prefWidth="1065.0"
          style="-fx-background-color: white;"
          stylesheets="@styles/main.css"
          xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="hr.tvz.productpricemonitoringtool.controller.UserEditController"
>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="350.0" minWidth="350.0" prefWidth="350.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="720.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <fx:include source="menuTest.fxml" GridPane.columnIndex="0"/>
    <GridPane fx:id="contentGridPane" style="-fx-background-color: white; -fx-padding: 0 40 20 40;"
              GridPane.columnIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="400.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="75.0" minHeight="75.0" prefHeight="75.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <fx:include maxWidth="1.7976931348623157E308" minWidth="300.0" source="topBar.fxml" GridPane.rowIndex="0"/>
        <GridPane GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0"
                                   prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="300.0" prefWidth="300.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0"
                                   prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="200.0" minHeight="200.0" prefHeight="200.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="271.0" minHeight="200.0" prefHeight="271.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="95.0" minHeight="29.0" prefHeight="29.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="50.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Name" GridPane.valignment="BOTTOM">
                            <GridPane.margin>
                                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="nameTextField" maxHeight="40.0" prefHeight="40.0" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets left="15.0" right="15.0"/>
                            </GridPane.margin>
                        </TextField>
                        <Label text="Email" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                            <GridPane.margin>
                                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="emailTextField" disable="true" editable="false" maxHeight="40.0"
                                   prefHeight="40.0" GridPane.rowIndex="3">
                            <GridPane.margin>
                                <Insets left="15.0" right="15.0"/>
                            </GridPane.margin>
                        </TextField>
                        <Label text="Role" GridPane.rowIndex="4" GridPane.valignment="BOTTOM">
                            <GridPane.margin>
                                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="roleTextField" disable="true" editable="false" maxHeight="40.0"
                                   prefHeight="40.0" GridPane.rowIndex="5">
                            <GridPane.margin>
                                <Insets left="15.0" right="15.0"/>
                            </GridPane.margin>
                        </TextField>
                    </children>
                </GridPane>
                <Button mnemonicParsing="false" onAction="#handleEdtUser" text="Apply changes" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="15.0"/>
                    </GridPane.margin>
                </Button>
                <Label onMouseClicked="#handleUserEditPasswordRedirect" text="Want to change your password? Click here!"
                       GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3"
                       GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets bottom="15.0"/>
                    </GridPane.margin>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Label>
                <Circle fx:id="userProfilePictureCircle" onMouseClicked="#handlePickProfilePicture" radius="100.0"
                        stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                        GridPane.valignment="CENTER">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Circle>
            </children>
            <GridPane.margin>
                <Insets top="25.0"/>
            </GridPane.margin>
        </GridPane>
    </GridPane>
</GridPane>
