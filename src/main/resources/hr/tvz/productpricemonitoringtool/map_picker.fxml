<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<BorderPane stylesheets="@styles/main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.tvz.productpricemonitoringtool.controller.MapPickerController">
    <center>
        <VBox>
            <WebView fx:id="webView" VBox.vgrow="ALWAYS" />
         <BorderPane maxHeight="50.0" minHeight="70.0" prefHeight="70.0" prefWidth="200.0" style="-fx-background-color: white;">
            <right>
                  <Button onAction="#handlePickData" prefHeight="50.0" prefWidth="100.0" text="Pick" BorderPane.alignment="CENTER">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <BorderPane.margin>
                     <Insets left="15.0" right="15.0" />
                  </BorderPane.margin>
               </Button>
            </right>
            <center>
               <TextField fx:id="pickedLocationTextField" disable="true" BorderPane.alignment="CENTER">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <padding>
                     <Insets left="15.0" />
                  </padding>
                  <BorderPane.margin>
                     <Insets left="15.0" />
                  </BorderPane.margin>
               </TextField>
            </center>
         </BorderPane>
         <HBox />
        </VBox>
    </center>
</BorderPane>
